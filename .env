# Docker Environment Configuration
# Copy this file to .env and modify the values as needed

# MySQL Configuration
mysql_root_password=secret
mysql_password=secret

# Myddleware Configuration  
myddleware_port=30080

# Database URL (automatically configured in docker-compose.yml)
# DATABASE_URL=mysql://myddleware:secret@mysql:3306/myddleware?serverVersion=5.7 

MYDDLEWARE_VERSION=4.1.0-3

APP_SECRET=Thissecretisnotsosecretchangeit
APP_ENV=prod
APP_DEBUG=false
# MAILER_URL=null://

SENSITIVE_FIELDS=password,accesskey,accesstoken,token,useraccesstoken,tokensecret,consumerkey,consumersecret,apikey,apiuser,apikeysecret,clientsecret,hashkey,authid

###> Delivery Address ###
DELIVERY_ADDRESS=example@email.com
###< Delivery Address ###

# Two-Factor Authentication Configuration
MAILER_FROM=noreply@myddleware.com
MAILER_DSN=
BREVO_APIKEY=

COMPOSER_MEMORY_LIMIT=-1

#  * .env                contains default values for the environment variables needed by the app
#  * .env.local          uncommitted file with local overrides
#  * .env.$APP_ENV       committed environment-specific defaults
#  * .env.$APP_ENV.local uncommitted environment-specific overrides
#
# Real environment variables win over .env files.
#
# DO NOT DEFINE PRODUCTION SECRETS IN THIS FILE NOR IN ANY OTHER COMMITTED FILES.
# https://symfony.com/doc/current/configuration/secrets.html
#
# Run "composer dump-env prod" to compile .env files for production use (requires symfony/flex >=1.2).
# https://symfony.com/doc/current/best_practices.html#use-environment-variables-for-infrastructure-configuration

