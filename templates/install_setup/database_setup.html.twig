{% extends 'base.html.twig' %}

{% block title %}Install Myddleware{% endblock %}

{% block body %}
    {# Logo myddleware #}
    <div>
        <img src="build/images/logo/logo1.png" alt="Myddleware" class="logo-register">
    </div>
    <div class="install">
        <h3 class="install-title">Install Step 2 : setting up your Myddleware database</h3>
        {{ form_start(databaseForm) }}
            {{ form_row(databaseForm.host) }}
            {{ form_row(databaseForm.port)}}
            {{ form_row(databaseForm.name) }}
            {{ form_row(databaseForm.user) }}
            {{ form_row(databaseForm.password) }}
            {{ form_row(databaseForm.Save) }}
        {{ form_end(databaseForm) }}
        <button class="home_item btn btn-primary"><a href="{{path('app_database_connection')}}">Next</a></button>
        <button class="home_item btn btn-primary"><a class="back_requirements" href="{{path('app_install_requirements')}}">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
            </svg>Go back to requirements check
        </a></button>        
    </div>
    
{% endblock %}