{% extends 'baseone.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('install') }}
{% endblock %}
{% block title %}{% endblock %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header bg-primary text-white"> Install Step 3 : checking Myddleware is connected to the database</div>
                        <div class="card-body d-flex justify-content-center">
                            <div class="card col-6">
                                <div class="card-header bg-success text-white">
                                    Database connection check
                                </div>
                                <div class="card-body">
                                    {% if connection_failed_message %}
                                        <p class="alert-danger">{{ connection_failed_message }}</p>
                                        <p>Go back to the previous page to reset your database connection</p>
                                    {% elseif connection_success_message %}
                                        <p class="alert-success">{{ connection_success_message }}</p>
                                    {% endif %}
                                    <div class="btn-group d-flex justify-content-center mt-5">
                                            <a href="{{ path('database_setup') }}" id="previous" role="button" class="btn btn-outline-secondary btn-lg">
                                                <i class="fas fa-arrow-left"></i>
                                                {{ 'install.previous' | trans }}
                                            </a>
                                        {% if connection_failed_message %}
                                            <button type="button" class="btn btn-light btn-lg" id="next-btn" disabled>
                                                {{ 'install.next' | trans }}
                                                <i class="fas fa-arrow-right"></i>
                                            </button>
                                        {% elseif connection_success_message %}
                                            <a href="{{ path('database_fixtures_load') }}" id="next" role="button"  class="btn btn-outline-primary btn-lg">
                                                {{ 'install.next' | trans }}
                                                <i class="fas fa-arrow-right"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer>
{% include 'footer.html.twig' %}
</footer>
{% block javascripts %}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    {{ encore_entry_script_tags('install') }}
{% endblock %}
{% endblock %}