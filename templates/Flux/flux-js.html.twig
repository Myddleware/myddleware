{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('flux') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('flux') }}
    <script src="{{ asset('assets/js/three-modal.js') }}" type="module"></script>
{% endblock %}

{% block titlesm %}Document Detail{% endblock titlesm %}

{% block body %}
<script>
    // Make user timezone and date format available to JavaScript
    window.userTimezone = "{{ app.user.timezone }}";
    window.userDateFormat = "{{ app.user.dateFormat }}";
</script>
<div id="flux-container">
    <div class="flux-card">
        <!-- Our JavaScript will dynamically render the content here -->
        <div class="loading-spinner text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>
{% endblock %} 