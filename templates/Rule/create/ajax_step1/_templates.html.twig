{# templates/Rule/create/_templates_list.html.twig #}

<div class="row g-3">
  {% for tpl in templates %}
    <div class="col-12 col-lg-6">
      <article class="card h-100 shadow-sm template-card"
               data-template-name="{{ tpl.name|e }}">
        <div class="card-body d-flex flex-column">

          <div class="d-flex justify-content-between align-items-start mb-2">
            <div>
              <h4 class="h6 mb-1">{{ tpl.name }}</h4>
              {% if tpl.description is defined and tpl.description %}
                <p class="text-muted small mb-0">
                  {{ tpl.description }}
                </p>
              {% endif %}
            </div>

            {% if tpl.rules is defined %}
              <span class="badge-rule-template px-3">
                {{ tpl.rules|length }} 
                {{ 'animate.template.rule'|trans }}
              </span>
            {% endif %}
          </div>

          {% if tpl.rules is defined and tpl.rules is not empty %}
            <ul class="list-unstyled small mb-3 mt-3">
              {% for rule in tpl.rules|slice(0, 3) %}
                <li class="mb-1">
                  <strong>{{ rule.name }}</strong><br>
                  <span class="text-muted">
                    {{ rule.sourceSolution }}.{{ rule.sourceModule }}
                    â†’ {{ rule.targetSolution }}.{{ rule.targetModule }}
                  </span>
                </li>
              {% endfor %}

              {% if tpl.rules|length > 3 %}
                <li class="text-muted">
                  + {{ tpl.rules|length - 3 }}
                {{ 'animate.template.other_rule'|trans }}
                </li>
              {% endif %}
            </ul>
          {% endif %}

          <div class="mt-auto">
            <button type="button"
                    class="btn btn-sm btn-outline-primary js-template-choose"
                    data-template-name="{{ tpl.name|e }}">
              {{ 'animate.template.use'|trans }}
            </button>
          </div>
        </div>
      </article>
    </div>
  {% endfor %}
</div>
