<section class="mb-4" id="step-1">
  <h2 class="h5 mb-3">{{ 'animate.title'|trans }}</h2>

  <form id="step1-form" novalidate>
    <div class="row g-4">
      <div class="col-12 col-lg-6">
        <label for="rulename" class="form-label">
          {{ 'animate.rulename'|trans({'default': 'Name of your rule'}) }}
        </label>

        <div class="position-relative">
          <input id="rulename"
                 type="text"
                 class="form-control"
                 placeholder="{{ 'animate.rulename'|trans({'default': 'Name here'}) }}"
                 maxlength="40"
                 autocomplete="off"
                 required
                 data-check-url="{{ path('regle_inputs_name_unique') }}"
          >

          <div id="rulename-spinner"
               class="position-absolute top-50 end-0 translate-middle-y pe-2 d-none">
            <div class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></div>
          </div>
        </div>

        <div id="rulename-feedback" class="form-text"></div>
      </div>

      <div class="col-12">
        <label for="ruledescription" class="form-label">
          {{ 'animate.choice.description'|trans({'default': 'Description'}) }}
        </label>
        <textarea id="ruledescription" class="form-control" rows="4" placeholder="{{ 'animate.choice.description'|trans({'default': 'Description here'}) }}">
        </textarea>
      </div>
    </div>
  </form>
</section>
