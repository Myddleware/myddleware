{% extends 'base.html.twig' %}

{% block title %}User Profile{% endblock %}

{% block body %}
    <div class="install">
    {# <div class="sidebar-profile"> #}
    {# Logo myddleware #}
    <div>
		<img src="../build/images/logo/logo1.png" alt="Myddleware" class="logo-register">
	</div>

    {# </div>
    <div class="main-profile"> #}
        <h3>My profile</h3>
        {% for role in app.user.roles %}
            {% if role != 'ROLE_USER' %}
                <p>
                    <span class="fa fa-star"></span>
                    <i>{{ role }}</i>
                </p>
            {% endif %}
        {% endfor %}
        <p>Email: {{ app.user.email }}</p>
        <p>Timezone: {{ app.user.timezone }}</p>
        	<button class="home_item btn btn-primary">
				<a href="{{path('admin_dashboard')}}">Return</a>
			</button>
    </div>


{% endblock %}
