<section class="p-3">
      <h2 class="text-center m-3">Documents</h2>
      <div class="table-responsive">
            <table class="listepagerflux table">
                  <thead>
                        <tr>
                              <th scope="col">
                                    <input id="massselectall" type="checkbox" name="massselectall"/>
                              </th>
                              <th>{{'list_flux.tab.id'|trans}} <span data-sort="id"><i class='fas fa-angle-down idIcon'></i></span></th>
                              <th>{{'list_flux.tab.name'|trans}} <span data-sort="name"><i class='fas fa-angle-down nameIcon'></i></span></th>
                              <th>{{'list_flux.tab.date_created'|trans}} <span data-sort="date_created"><i class='fas fa-angle-down date_createdIcon'></i></span></th>
                              <th>{{'list_flux.tab.date_modified'|trans}} <span data-sort="date_modified"><i class='fas fa-angle-down date_modifiedIcon'></i></span></th>
                              <th>{{'list_flux.tab.statut'|trans}} <span data-sort="status"><i class='fas fa-angle-down statusIcon'></i></span></th>
                              <th>{{'list_flux.tab.source_id'|trans}} <span data-sort="source_id"><i class='fas fa-angle-down source_idIcon'></i></span></th>
                              <th>{{'list_flux.tab.target_id'|trans}} <span data-sort="target_id"><i class='fas fa-angle-down target_idIcon'></i></span></th>
                              <th>{{'list_flux.tab.type'|trans}} <span data-sort="type"><i class='fas fa-angle-down typeIcon'></i></span></th>
                              <th>{{'list_flux.tab.source_date_modified'|trans}} <span data-sort="source_date_modified"><i class='fas fa-angle-down source_date_modifiedIcon'></i></span></th>
                        </tr>
                  </thead>
                  <tbody>
                        {% if pager is defined and pager is not empty %}
                              {% for document in pager %}
                                    <tr>
                                          <td>
                                                {% if document.global_status|lower == 'close' or document.global_status|lower == 'cancel' %}
                                                      <input type="checkbox" name="{{ document.id }}" disabled="disabled"/>
                                                {% else %}
                                                      <input type="checkbox" name="{{ document.id }}"/>
                                                {% endif %}
                                          </td>
                                          <td><a href="{{ path('flux_info',{'id' : document.id }) }}">{{ document.id }}</a></td>                                          
                                          <td><a href="{{ path('regle_open',{'id' : document.rule_id }) }}" title="">{{ document.rule_name }}</a></td>
                                          <td>{{ document.date_created|date('Y-m-d H:i:s') }}</td>
                                          <td>{{ document.date_modified|date('Y-m-d H:i:s') }}</td>
                                          <td class="ctr" id="documents_filters">
                                                <div class="gblstatus_{{ document.global_status|lower }}">
                                                {{ document.status }}
                                                {% if document.global_status|lower == 'close' %}
                                                      <i class="fa fa-check"></i>
                                                {% elseif document.global_status|lower == 'error' or document.global_status|lower == 'open' %}
                                                      <i class="fa fa-times"></i>
                                                {% elseif document.global_status|lower == 'open' %}
                                                      <span class="glyphicon glyphicon-repeat">
                                                {% elseif document.global_status|lower == 'cancel' %}
                                                      <i class="fa fa-exclamation"></i>
                                                {% endif %}
                                                </div>
                                          </td>
                                          <td>{{ document.source_id }}</td>
                                          <td>{{ document.target_id }}</td>
                                          <td>{{ document.type }}</td>
                                          <td>{{ document.source_date_modified }}</td>
                                    </tr>
                              {% endfor %}
                        {% else %}
                              <tr>
                                    <td colspan="11">No documents found.</td>
                              </tr>
                        {% endif %}
                  </tbody>
            </table>
      </div>
      <div class="d-flex justify-content-center">
					{% if pager.haveToPaginate %}
						{{ pagerfanta(pager, 'twitter_bootstrap4', {'routeName': 'document_list_page'}) }}
					{% endif %}
