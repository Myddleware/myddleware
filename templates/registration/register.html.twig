{% extends 'baseone.html.twig' %}
{% block stylesheets %}

    {{ encore_entry_link_tags('install') }}
{% endblock %}
{% block body %}
<div id="myd_top"></div>
<div class="container">
    <div class="row">
        <div class="col">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <p class="logo-myddleware-install-container"><span id="logo"></span></p>
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div id="card-install-blue-like-logo" class="card-header bg-primary text-white">Install step 5 : create your Myddleware account</div>
                        <div class="card-body d-grid justify-content-center">
                            <div class="card register-container">
                                <div class="card-header">
                                    Register 
                                </div>
                                <div class="card-body">
                                    {{ form_start(registrationForm) }}
                                        <div class="mb-2">
                                            {{ form_row(registrationForm.username) }}
                                        </div>
                                        <div class="mb-2">
                                            {{ form_row(registrationForm.email) }}
                                        </div>
                                        <div class="mb-2">
                                            {{ form_row(registrationForm.plainPassword, {
                                                label: 'Password'
                                                }) 
                                            }}
                                        </div>
                                        <div class="mb-2">
                                            {{ form_row(registrationForm.agreeTerms) }}
                                        </div>
                                    <div class="d-grid mt-4">
                                        <button type="submit" class="btn btn-success">Register</button>
                                    </div>
                                    {{ form_end(registrationForm) }}
                                    <div>
                                        <div class="d-grid mt-4">
                                            <a href="{{path('database_fixtures_load')}}" role="button" class="btn btn-outline-primary btn-block">
                                                <i class="fas fa-arrow-left"></i>
                                                Go back to database setup
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer>
{% include 'footer.html.twig' %}
</footer>
 {% block javascripts %}
     {{ encore_entry_script_tags('install') }}
 {% endblock %}
{% endblock %}
