{% extends 'base.html.twig' %}
{% block titlesm %}
	{{'title.index.panel'|trans}}
{% endblock titlesm %}
{% block body %}
	<div id="fd-title-small" class="left">
		<p>{{ 'jobscheduler.total'|trans }}</p>
		<p>
			<span class="nb">{{projects | length}}</span>
		</p>
	</div>
	<div class="container">
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">{{'project.name'|trans}}</th>
					<th scope="col">{{'project.description'|trans}}</th>
					<th scope="col">{{'project.rulenb'|trans}}</th>
                    <th scope="col">{{ 'jobscheduler.actions'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for project in projects %}
					<tr>
						<th scope="row">{{ project.id }}</th>
						<td>{{ project.name }}</td>
						<td>{{ project.description }}</td>
						<td></td>
						<td class="CRUD-icons">
							<a href="{{ path('project_edit',{'id' : project.id }) }}">
								<span class="btn-opt">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
									<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
									<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
									</svg>
								</span>
							</a>
							<a class="delete" href="{{ path('delete_project',{'id' : project.id }) }}" title="" onclick="return(confirm('{{ 'project.delete'|trans }}'));">
								<span class="btn-opt">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
									<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
									<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
									</svg>
								</span>
							</a>
							<a href="{{ path('project_show',{'id' : project.id }) }}">
								<span class="btn-opt">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark" viewBox="0 0 16 16">
									<path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z"/>
									</svg>
								</span>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="col text-center">
			<a id="new_project" class="btn btn-outline-success" href="{{ path('app_create_project') }}" title="" role="button">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewbox="0 0 16 16">
					<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
				</svg>
				{{'project.create'|trans}}
			</a>
		</div>
	</div>
{% endblock %}
