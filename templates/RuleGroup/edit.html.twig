{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | {{ 'rulegroup.edit'| trans}}{% endblock %}
{% block titlesm %}{{ 'rulegroup.edit'| trans}} <i class="fa-solid fa-arrow-right fa-flip arrow-cut-animation fa-solid fa-arrow-right fa-flip"></i> {{ rulegroup.name }}{% endblock titlesm %}
{% block body %}
    <div class="container mt-5">
        <div class="text-center m-5">
            <a href="{{ path('rulegroup_list') }}" class="btn btn-outline-primary m-2"> {{ 'rulegroup.back'| trans }}</a>
        </div>
        
        {{ form_start(form) }}
        <div class="mb-3">
                <div class="row mb-4">
                    <div class="col-md-6">
                        {{ form_row(form.name) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        {{ form_row(form.description) }}
                    </div>
                </div>
        </div>
        
        {{ form_end(form) }}
    </div>
{% endblock %}