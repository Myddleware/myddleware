{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	|
	{{ 'rulegroup.list'|trans }}
{% endblock %}

{% block titlesm %}
	{{ 'rulegroup.list'|trans }}
	{% if nb_rulegroup > 0 %}
		({{ nb_rulegroup }})
	{% endif %}
{% endblock titlesm %}

{% block body %}

<div class="d-flex align-items-center justify-content-center my-5">
    {% for message in app.flashes('success_rulegroup') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <a href="{{ path('rulegroup_create') }}" class="btn btn-primary">{{ 'Create new rule group'|trans }}</a>
</div>
<div id="rulegroups">
	<div class ="table-wrapper">
		<table class="listepager table container">
			<thead class="text-center">
				<tr>
					<th class="rounded-table-up-left">ID</th>
					<th>Name</th>
					<th>Date Created</th>
					<th>Date Modified</th>
					<th>Created By</th>
					<th>Modified By</th>
					<th class="rounded-table-up-right">Description</th>
				</tr>
			</thead>
			<tbody>
				{% for ruleGroup in entities %}
					<tr>
						<td>{{ ruleGroup.id }}</td>
						<td>
							<a href="{{ path('rulegroup_show', {'id': ruleGroup.id}) }}" class="help-link all-link">{{ ruleGroup.name }}</a>
						</td>
						<td>{{ ruleGroup.dateCreated|date(app.user.dateFormat ~ ' H:i:s', app.user.timezone) }}</td>
						<td>{{ ruleGroup.dateModified|date(app.user.dateFormat ~ ' H:i:s', app.user.timezone) }}</td>
						<td>{{ ruleGroup.createdBy.username }}</td>
						<td>{{ ruleGroup.modifiedBy.username }}</td>
						<td>{{ ruleGroup.description }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
{% endblock %}

{% block cssin %}{% endblock cssin %}
