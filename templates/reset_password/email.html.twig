{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

	{% block body %}
	<section class="container">
		<div class="row justify-content-center">
			<div class="col text-center pt-5">
				<img src="{{ asset('images/logo/logo1.png') }}" alt="Myddleware logo" class="logo-register" />
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="card shadow rounded p-5 col-lg-8">
				<div class="card shadow rounded p-5 col-lg-8">
					<h1 class="card-title text-center">{{'hi' | trans }}</h1>
					<p>{{'reset_password_link' | trans }}</p>
					<a href="{{ url('app_reset_password', {token: resetToken.token}) }}">{{ url('app_reset_password', {token: resetToken.token}) }}</a>
					<p>{{ 'link_expires' | trans }} {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.</p>
					<p>{{ 'cheers' | trans }}</p>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
