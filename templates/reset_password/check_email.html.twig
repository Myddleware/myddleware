{% extends 'base.html.twig' %}

{% block title %}{{ 'password_reset_email_sent' | trans }}
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row justify-content-center">
			<div class="col text-center pt-5">
				<img src="{{ asset('build/images/logo/logo1.png') }}" alt="Myddleware logo" class="w-25" />
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="card shadow rounded p-5 col-lg-8">
				<p>
					{{ 'check_email_link' | trans }}
					{{ 'link_expires' | trans }}
					{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
				</p>
				<p>{{ 'check_spam_folder' | trans }} <a href="{{ path('app_forgot_password_request') }}">{{ 'try_again' | trans }}</a>.</p>
			</div>
		</div>
	</section>
{% endblock %}
