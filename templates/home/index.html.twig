{% extends 'base.html.twig' %}
{% block title %} {{ 'app_name' | trans }} - {{ 'homepage' | trans }}
{% endblock %}
{% block body %}
	<header>
		<div class="home_container">
			<img class="logo" src="build/images/logo/logo1.png" alt="logo_myddleware">
			{% if user %}
				<button class="first_home_item btn btn-primary">
					<a href="{{path('admin_dashboard')}}">Dashboard</a>
				</button>
			{% else %}
				<button class="first_home_item btn btn-primary">
					<a href="{{path('login')}}">Login</a>
				</button>
			{% endif %}			
			<button class="home_item btn btn-primary">
				<a href="">{{ 'install.title' | trans }}</a>
			</button>
		</div>
	</header>
	<main class="main_home">
		<section>
			<h2>{{ 'connect_your_apps' | trans }}</h2>
			<h4>{{ 'complex_integration_easier' | trans }}</h4>
			<p>{{ 'free_open_source' | trans }} !</p>
			<p>{{ 'install_instructions' | trans }} : <a href="https://myddleware.github.io/myddleware/#/" target="_blank">https://myddleware.github.io/myddleware</a></p>
		</section>
	</main>
{% endblock %}