{% extends 'base.html.twig' %}
{% block title %} {{ 'app_name' | trans }} - {{ 'homepage' | trans }} {% endblock %}
{% block body %}
<header>
    <div class ="home_container">
        <img class="logo w-15" src="build/images/logo/logo_2.png" alt="logo_myddleware">
		<div class="home-button m-4">
			{% if user %}
				<button class="connection">
						<strong><a href="{{path('admin_dashboard')}}">{{ 'dashboard' | trans }}</a></strong>
				</button>
			{% else %}
				<strong><a href="{{path('login')}}" class="connection m-4">{{ 'login.login' | trans }}</a></strong>
			{% endif %}	
			<strong><a href="{{path('app_install_requirements')}}" class="connection m-4">{{ 'install.title' | trans }}</a></strong>
			<strong><a href="{{ path('app_register') }}" class="btn-home m-4 p-3">{{ 'login.sign_in' | trans }} </a></strong>
		</div>
	</div>
</header>

<main class="main_home pb-3">
