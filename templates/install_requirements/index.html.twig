
{% extends 'baseone.html.twig' %}
{% block stylesheets %}
    {{ encore_entry_link_tags('install') }}
{% endblock %}
{% block title %}{% endblock %}
{% block body %}
<div id="myd_top"></div>
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <p><span id="logo" class="logo-install"></span></p>
            <div class="row">
                <div class="col">
                    <div class="card text-center main-card">
                        <div class="card-header text-center text-white bg-primary"> Install Step 1 : checking Myddleware requirements</div>
                        <div class="card-body d-flex justify-content-center">
                            <article class="card col-6">
                                <div class="card-header bg-success text-white">
                                    <h5 class="card-title">{{ 'install.requirements_checker' | trans }}</h5>
                                </div>
                                <div class="card-body">
                                    <p id="install-info">{{ 'install.requirements_info' | trans }}</p>
                                    {% if php_version %}
                                        <p>PHP version : </p>
                                        <p class="alert-success">{{ php_version }}</p>
                                    {% else %}
                                    <p>{{ 'install.php_version_not_found' | trans }}</p>
                                    {% endif %}
                                    <p><strong>{{ system_status }}</strong></p>
                                    {% if error_messages %}
                                    <p>{{ 'install.errors_to_do_message' | trans }} : </p>
                                    <ul class="list-group">
                                    {% for message in error_messages %}
                                            <li class="list-group-item-danger">{{ message }} </li>
                                    {% endfor %}
                                    </ul>
                                    {% endif %}
                                    {% if recommendation_messages %}
                                        <p>{{ 'install.recommendations_to_do_message' | trans }} : </p>
                                        <ul class="list-group">
                                            {% for message in recommendation_messages %}
                                                    <li class="list-group-item-warning">{{ message }} </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                    <aside class="card">
                                        <div class="card-header bg-info text-white">
                                            <h6 class="card-title">Note</h6>
                                        </div>
                                        <div class="card-body">
                                            <p>{{ 'install.note_message' | trans }} :</p>
                                            <code>symfony check:requirements</code>
                                        </div>
                                    </aside>
                                    <div class="btn-group">
                                        <button class="btn btn-outline-success btn-lg" onClick="window.location.reload()">
                                            <i class="fas fa-sync-alt"></i>
                                            {{ 'install.check_button' | trans }}
                                        </button>
                                        {% if not error_messages %} 
                                        <a href="{{path('database_setup')}}" class="btn btn-outline-primary btn-lg" role="button">
                                            {{ 'install.next' | trans }}
                                            <i class="fas fa-arrow-right"></i>
                                        </a>
                                        {% endif %}
                                    </div>
                                </div> 
                            </article>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<footer>
{% include 'footer.html.twig' %}
</footer>

{% block javascripts %}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    {{ encore_entry_script_tags('install') }}
{% endblock %}
{% endblock %}
