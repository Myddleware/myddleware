{% extends 'base.html.twig' %}
{% block titlesm %}
	<div class="homepage_welcome m-3">
		<span class="typewriter mb-4 mt-5">{{'title.index.panel'|trans }}</span>
		<p class="homepage_welcome_text mt-4">{{'title.index.text'|trans }}</p>
		<p class="homepage_welcome_text mb-5">{{'title.index.text2'|trans }}</p>
		<button id="bnt_welcome" class="btn btn-dark text-center mt-5" onclick="window.open('https://myddleware.github.io/myddleware/#/', '_blank')">
			{{ 'title.index.btn'|trans }}
		</button>
	</div>
{% endblock titlesm %}
{% block body %}
	<div>
		<div id="panel" class="row">
			<div class="col">
				<div class="d-flex justify-content-center my-4">
					<h3 class="display-6 mt-4 title_section_homepage">{{'panel.data'|trans}}</h3>
				</div>
			</div>
			<div id="info-blocks" class="container my-5 px-4">
				<div class="row justify-content-center align-center">
					<div class="col">
						<div class="row d-flex">
							<div class="card m-2 info col ">
								<div class="card-body">
									<h4 class="card-title">{{'panel.graph_tranfer_rule.desc'|trans}}</h4>
									<div id="pie_chart_transfer_rule" ></div>
								</div>
							</div>
							<div class="card m-2 info col">
								<div class="card-body">
									<h4 class="card-title">{{'panel.graph_error.title'|trans}} ({{ nbFlux }})</h4>
									<div id="pie_chart_error_doc" ></div>
								</div>        
							</div>
						</div>	
						<div  class="row d-flex">                    
							<div class="card m-2 info col">
								<div class="card-body">
									<h4 class="card-title">{{ 'panel.graph_job_histo.title'|trans }}</h4>
									<div id="column_chart_job_histo" ></div>
								</div>        
							</div>
							<div class="card m-2 info col">
								<div class="card-body">
									<h4 class="card-title">{{ 'panel.graph_histo.title'|trans }}</h4>
									<div id="column_chart_histo" ></div>
								</div>        
							</div>
						</div>
						<div  class="row d-flex">        
							<div class="card m-2 info col">
								<div class="card-body">
									<h4 class="card-title">{{'panel.list_job.title'|trans}}</h4>
									<ul class="list-group">
										{% for job in listJobDetail %}  
										<li class="list-group-item">
											<a href="{{ path('task_view',{'id' : job.id }) }}">{{ job.begin|date('d/m/Y') }}</span></a>
											<span> | {{ job.duration }} {{'panel.list_job.duration'|trans}}</span>
											<span> | {{ job.status }}</span>
											<span> | {{ job.message|sensor }}</span>
										</li>
										{% endfor %}
									</ul>
								</div>       	
							</div>
							<div class="card m-2 info col">
								<div class="card-body">
									{% if errorByRule %}
									<h4 class="card-title">{{'panel.list_job.nb'|trans}}</h4>
									<ul class="list-group">
										{% for rule in errorByRule %}  
										<li class="list-group-item">
											<span class="badge">{{ rule.cpt }}</span>
											<a href="{{ path('flux_error_rule',{'id' : rule.id }) }}">{{ rule.name }}</span></a>
										</li>
										{% endfor %}
									</ul>
									{% endif %}
								</div>        
							</div>
						</div>
					</div>
				</div>
			</div>
			<section class="solution-home-section">
				<div class="col" id="title-solution-home">
					<div class="d-flex justify-content-center my-4">
						<h3 class="display-6 title-section-home">{{ 'panel.solutions.title'|trans }}</h3>
					</div>
				</div>

				{% if solutions is not empty %}
				{# Right #}
					<div class="solution-home-scroll-container scroll-right">
						<ul class="solution-home-scroll solution-home-list">
							{% for solution in solutions %}
								<li class="solution-home-item">
									<a href="{{ 'view_connector.help.link'|trans }}{{ solution }}" target="_blank">
										<img alt="{{ solution }}" src="{{ asset('build/images/solution/' ~ solution ~ '.png') }}">
									</a>
								</li>
							{% endfor %}
							{% for solution in solutions %}
								<li class="solution-home-item">
									<a href="{{ 'view_connector.help.link'|trans }}{{ solution }}" target="_blank">
										<img alt="{{ solution }}" src="{{ asset('build/images/solution/' ~ solution ~ '.png') }}">
									</a>
								</li>
							{% endfor %}
						</ul>
					</div>
					{# gauche #}
					<div class="solution-home-scroll-container scroll-left mb-4">
						<ul class="solution-home-scroll solution-home-list">
							{% for solution in solutions %}
								<li class="solution-home-item">
									<a href="{{ 'view_connector.help.link'|trans }}{{ solution }}" target="_blank">
										<img alt="{{ solution }}" src="{{ asset('build/images/solution/' ~ solution ~ '.png') }}">
									</a>
								</li>
							{% endfor %}
							{% for solution in solutions %}
								<li class="solution-home-item">
									<a href="{{ 'view_connector.help.link'|trans }}{{ solution }}" target="_blank">
										<img alt="{{ solution }}" src="{{ asset('build/images/solution/' ~ solution ~ '.png') }}">
									</a>
								</li>
							{% endfor %}
						</ul>
					</div>
				{% endif %}
			</section>

			{# FEATURES #}
			<section class="feature_homepage">
				<div class="col">
					<div class="d-flex justify-content-center my-4">
						<h3 class="display-6 title_section_homepage">{{'panel.features.title'|trans}}</h3>
					</div>
				</div>

				<div class="container mt-5">
					<div class="row">
						<div class="col-md-4 mb-3">
							<button class="btn btn-dark w-100 toggle-btn-homepage">
								<div>
									<i class="fa fa-info-circle home_fa_info_circle" aria-hidden="true"></i>
								</div>
								<p>Direct job scheduler access in Myddleware</p>
								<span class="extra-text" style="display: none;">Control various processes in Myddleware and monitor their progress, have them run automatically at various intervals. Let Myddleware work for you!</span>
							</button>
						</div>
						<div class="col-md-4 mb-3">
							<button class="btn btn-dark w-100 toggle-btn-homepage">
								<div>
									<i class="fa fa-info-circle home_fa_info_circle" aria-hidden="true"></i>
								</div>
								<p>Workflow</p>
								<span class="extra-text" style="display: none;">Let Myddleware execute automatic actions for your documents based on your specific conditions!</span>
							</button>
						</div>
						<div class="col-md-4 mb-3">
							<button class="btn btn-dark w-100 toggle-btn-homepage">
								<div>
									<i class="fa fa-info-circle home_fa_info_circle" aria-hidden="true"></i>
								</div>
								<p>Document Mass action</p>
								<span class="extra-text" style="display: none;">Execute actions, such as reload, cancel or delete on multiple documents at once with a single click!</span>
							</button>
						</div>
						<div class="col-md-4 mb-3">
							<button class="btn btn-dark w-100 toggle-btn-homepage">
								<div>
									<i class="fa fa-info-circle home_fa_info_circle" aria-hidden="true"></i>
								</div>
								<p>Rule Duplication</p>
								<span class="extra-text" style="display: none;">Duplicate a rule if you need to create a new one with similar settings. It won't affect the original rule in any way, and it's so much faster than creating a new rule from scratch! What's more, if you need to test something for a rule, you can duplicate it, and you immediately have your test rule ready to go!</span>
							</button>
						</div>
						<div class="col-md-4 mb-3">
							<button class="btn btn-dark w-100 toggle-btn-homepage">
								<div>
									<i class="fa fa-info-circle home_fa_info_circle" aria-hidden="true"></i>
								</div>
								<p>More document filters</p>
								<span class="extra-text" style="display: none;">Use a wide array of custom filters to refine your search, such as date range, specific document status, document type, document content, etc.</span>
							</button>
						</div>
						<div class="col-md-4 mb-3">
							<button class="btn btn-dark w-100 toggle-btn-homepage">
								<div>
									<i class="fa fa-info-circle home_fa_info_circle" aria-hidden="true"></i>
								</div>
								<p>Variables</p>
								<span class="extra-text" style="display: none;">You have a word or a number that is the same across many rules and only changes occasionally ? Use the variables so you don't have to change it everywhere at the same time
</span>
							</button>
						</div>
					</div>
				</div>
			</section>
			{# CONTACT US #}
			<section class="solution-home-section" id="bottom_section_homepage">
				<div class="col" id="title_solution_homepage">
					<div class="d-flex justify-content-center my-4">
						<h3 class="display-6 title_section_homepage">{{'panel.contact.title'|trans}}</h3>
					</div>
				</div>
				<div class="d-flex justify-content-center my-5">
					<div class="contact-panel">
						<div  class="contact-panel-1">
							<h4 class="mb-4">{{'panel.contact.title2'|trans}}</h4>
							<p>{{'panel.contact.text1'|trans}}</p>
							<p>{{'panel.contact.text2'|trans}}
								:
								<div class="home-contact">contact@myddleware.com</div>
							</p>
							<p>{{'panel.contact.text3'|trans}}
								<a class="home-contact" href="https://github.com/Myddleware/myddleware/issues" target="_blank">GitHub</a>
							</p>
						</div>
					</div>
					<div class="contact-panel">
						<h4 class="mb-4">{{'panel.contact.title3'|trans}}</h4>
						<p>{{'panel.contact.text4'|trans}}</p>
						<p>{{'panel.contact.text5'|trans}}
							:
							<div class="home-contact">romanfaure@myddleware.com</div>
						</p>
					</div>
				</div>
				<div class="social-bar">
					<span class="line"></span>
					<div class="icons">
						<a href="https://www.youtube.com/channel/UCxI0ziSiRXXTqQ-XfFJr7-w" target="_blank" class="icon youtube" title="YouTube"></a>
						<a href="https://www.linkedin.com/company/10332261/" target="_blank" class="icon linkedin" title="LinkedIn"></a>
						<a href="https://twitter.com/myddleware_fr" target="_blank" class="icon twitter" title="X"></a>
					</div>
					<span class="line"></span>
				</div>
			</section>
		</div>
	</div>
</div></div><div class="clr"></div></div></div><script type="text/javascript">let trans_click = "{{ 'panel.solutions.click'|trans }}";</script><script type="text/javascript">var countNbDocuments = {{ countNbDocuments|json_encode|raw }};</script>{% endblock %}
