{% extends 'base.html.twig' %}
{% block titlesm %}{{ 'title.account.view'|trans }}{% endblock titlesm %}

{% block body %}
<div id="user_account" class="container">
    <div class="row justify-content-center">
        <div class="col text-center">
            <h2 class="display-4">{{ 'view_account.user_info'|trans }}</h2>
        </div>
    </div>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} d-flex justify-content-start align-content-start" role="alert">
                <i class="fas fa-{{ label == 'error' ? 'times' : 'check' }}"></i>
                <p class="ms-2">{{ message }}</p>
            </div>
        {% endfor %}
    {% endfor %}
    
    <!-- Tabs navigation -->
    <ul class="nav nav-tabs mt-4" id="profileTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">{{ 'view_account.tabs.general'|trans }}</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab" aria-controls="security" aria-selected="false">{{ 'view_account.tabs.security'|trans }}</button>
        </li>
    </ul>
    
    <!-- Tabs content -->
    <div class="tab-content mt-4" id="profileTabsContent">
        <!-- General Tab -->
        <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
            <div class="row">
                <div class="col-lg-8">
                    <h3 class="profile-section-title">{{ 'view_account.sections.personal_info'|trans }}</h3>
                    {{ form_start(form, {'attr': {'class': 'profile-form'}}) }}
                    <div class="input-group mb-4">
                        <label for="command" class="col-form-label input-group-text">{{ form_label(form.username) }}</label>
                        <div class="flex-grow-1">
                            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.username, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="input-group mb-4">
                        <label for="command" class="col-form-label input-group-text">{{ form_label(form.email) }}</label>
                        <div class="flex-grow-1">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.email, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    
                    
                    <div class="input-group mb-4">
                        <label for="command" class="col-form-label input-group-text">{{ 'view_account.fields.timezone'|trans }}</label>
                        <div class="flex-grow-1">
                            {{ form_widget(form.timezone, { 'attr': {'class': 'form-control'} }) }}
                            {{ form_errors(form.timezone, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <div class="text-end mt-4">
                        <button type="submit" id="save-account-details" class="btn btn-success" aria-label="{{ 'view_account.button.save'|trans }}">
                            <i class="fas fa-save me-2"></i>{{ 'view_account.button.save'|trans }}
                        </button>
                    </div>
                    {{ form_end(form) }}
                    
                    <div class="logs-section">
                        <h3 class="profile-section-title">{{ 'view_account.sections.logs'|trans }}</h3>
                        <div class="logs-actions">
                            <a href="{{path('download_log')}}">
                                <button type="button" class="btn btn-outline-primary" aria-label="{{ 'view_account.tooltip.download_logs'|trans }}">
                                    <i class="fas fa-download me-2"></i>{{ 'view_account.button.download_logs'|trans }}
                                </button>
                            </a>
                            
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a href="{{path('empty_log')}}" id="empty-logs-btn">
                                <button type="button" class="btn btn-outline-danger" aria-label="{{ 'view_account.tooltip.empty_logs'|trans }}">
                                    <i class="fas fa-trash-alt me-2"></i>{{ 'view_account.button.empty_logs'|trans }}
                                </button>
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">{{ 'view_account.sections.language_preferences'|trans }}</h5>
                            <div class="mt-3 language-selector">
                                <label>{{ 'view_account.label.language'|trans }}</label>
                                <div class="btn-group mt-2" role="group" aria-label="{{ 'view_account.tooltip.choose_language'|trans }}">
                                    <button class="btn btn-light">
                                        <a href="#" data-locale="{{ locales|languages['default'] }}" class="text-decoration-none">
                                            {{ locales|languages['default']|trans }}
                                        </a>
                                    </button>
                                    {% for locale in locales|languages['other'] %}
                                    <button class="btn btn-primary">
                                        <a href="{{ path('account_locale', {'locale': locale}) }}" data-locale="{{ locale }}" style="color: #fff;" class="text-decoration-none">
                                            {{ locale|trans }}
                                        </a>
                                    </button>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Security Tab -->
        <div class="tab-pane fade" id="security" role="tabpanel" aria-labelledby="security-tab">
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h3 class="card-title mb-3">{{ 'view_account.sections.password'|trans }}</h3>
                            <p class="card-text">{{ 'view_account.info.password_description'|trans }}</p>
                            <div class="mt-auto text-center">
                                <a href="{{ path('my_account_reset_password')}}" class="btn btn-primary" aria-label="{{ 'view_account.button.reset_password'|trans }}">
                                    <i class="fas fa-lock me-2"></i>{{ 'view_account.button.reset_password'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title mb-3">{{ 'view_account.sections.twofa'|trans }}</h3>
                            
                            {{ form_start(twoFactorAuthForm) }}
                            <div class="form-group mb-4">
                                <div class="form-check">
                                    {% if not smtpConfigured %}
                                        {{ form_widget(twoFactorAuthForm.enabled, { 'attr': {'class': 'form-check-input', 'disabled': 'disabled'} }) }}
                                        <div class="alert alert-danger mt-2">
                                            <i class="fas fa-exclamation-triangle"></i>
                                            <span class="ms-2">Two-factor authentication requires email configuration. Please configure either SMTP settings or Sendinblue API key in the <a href="{{ path('management_smtp_index') }}">SMTP Management</a> page.</span>
                                        </div>
                                    {% else %}
                                        {{ form_widget(twoFactorAuthForm.enabled, { 'attr': {'class': 'form-check-input'} }) }}
                                    {% endif %}
                                    {{ form_label(twoFactorAuthForm.enabled, null, { 'label_attr': {'class': 'form-check-label'} }) }}
                                </div>
                                {{ form_errors(twoFactorAuthForm.enabled) }}
                                <small class="form-text text-muted">
                                    <i class="fas fa-info-circle me-1"></i>{{ 'view_account.info.twofa_description'|trans }}
                                </small>
                            </div>
                            
                            <div class="form-group mb-4">
                                <label>{{ 'view_account.fields.auth_method'|trans }}</label>
                                <div class="input-group twofa-method">
                                    <input type="text" class="form-control disabled-field" value="Email" disabled>
                                </div>
                            </div>
                            
                            {# Hide the preferredMethod field since we're only using email #}
                            <div style="display: none;">
                                {{ form_widget(twoFactorAuthForm.preferredMethod) }}
                            </div>
                            
                            <div class="text-end mt-4">
                                <button type="submit" class="btn btn-success" aria-label="{{ 'view_account.button.save_2fa'|trans }}">
                                    <i class="fas fa-save me-2"></i>{{ 'view_account.button.save_2fa'|trans }}
                                </button>
                            </div>
                            {{ form_end(twoFactorAuthForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Dialog for Empty Logs -->
<div id="empty-logs-dialog" class="confirmation-dialog">
    <div class="dialog-title">
        <i class="fas fa-exclamation-triangle text-warning me-2"></i>Confirmation
    </div>
    <div class="dialog-content">
        {{ 'view_account.confirm.empty_logs'|trans }}
    </div>
    <div class="dialog-buttons">
        <button id="cancel-empty-logs" class="btn btn-secondary">{{ 'cancel'|trans }}</button>
        <a id="confirm-empty-logs" href="{{path('empty_log')}}" class="btn btn-danger">
            <i class="fas fa-trash-alt me-2"></i>{{ 'view_account.button.empty_logs'|trans }}
        </a>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
        
        // We don't need the phone number visibility logic anymore since we're only using email
        const enabledCheckbox = document.querySelector('input[name="two_factor_auth_form[enabled]"]');
        
        function updateFieldsVisibility() {
            // Nothing to update since we've hidden the preferredMethod field
        }
        
        // Initial state
        updateFieldsVisibility();
        
        // Event listeners
        if (enabledCheckbox) {
            enabledCheckbox.addEventListener('change', updateFieldsVisibility);
        }
        
        // Empty logs confirmation
        const emptyLogsBtn = document.getElementById('empty-logs-btn');
        const emptyLogsDialog = document.getElementById('empty-logs-dialog');
        const cancelEmptyLogs = document.getElementById('cancel-empty-logs');
        const confirmEmptyLogs = document.getElementById('confirm-empty-logs');
        
        if (emptyLogsBtn) {
            emptyLogsBtn.addEventListener('click', function(e) {
                e.preventDefault();
                emptyLogsDialog.style.display = 'block';
            });
        }
        
        if (cancelEmptyLogs) {
            cancelEmptyLogs.addEventListener('click', function() {
                emptyLogsDialog.style.display = 'none';
            });
        }
    });
</script>
{% endblock %}