{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ 'variable.edit'|trans }}{% endblock %}

{% block titlesm %}{{ 'variable.edit'|trans }} <i class="fa-solid fa-arrow-right fa-flip arrow-cut-animation fa-solid fa-arrow-right fa-flip"></i> {{ variable.name }}{% endblock titlesm %}

{% block body %}
    <div class="container mt-5">
        <div class="text-center m-5">
            <a href="{{ path('variable_list') }}" class="btn btn-outline-primary m-2"> {{ 'variable.back_to_list'|trans }}</a>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        
        {{ form_start(form) }}
        <div class="mb-3">
            <div class="row mb-4">
                <div class="col-md-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.value) }}
                </div>
            </div><div class="row mb-4">
                <div class="col-md-6 mb-3">
                    {{ form_row(form.description) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
