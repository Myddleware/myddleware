{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title' | trans }}
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<form action="{{ path('login') }}" method="post">
		<label for="username">{{ 'form.email' | trans }}:</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}"/>

		<label for="password">{{ 'login.password' | trans }}:</label>
		<input
		type="password" id="password" name="_password"/>

		{# If you want to control the URL the user is redirected to on success #}
		<input type="hidden" name="_target_path" value="/admin"/>
		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<button type="submit" class="btn btn-primary">{{ 'login.sign_in' | trans }}</button>
		<a href="{{path('app_forgot_password_request')}}">{{ 'login.forgot_password' | trans }}?</a>
	</form>

{% endblock %}
