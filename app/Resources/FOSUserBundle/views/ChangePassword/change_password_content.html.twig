{% trans_default_domain 'FOSUserBundle' %}
{{ form_start(form, { 'action': path('my_account'), 'attr': { 'class': 'fos_user_change_password' } }) }}

<div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label"> {{ form_label( form.current_password) }}</label>
    <div class="col-sm-10">
        {{ form_widget( form.current_password, { 'attr': {'class': 'form-control'} }) }}
            <span style="color: red"> {{ form_errors(form.current_password) }}</span>

    </div>
</div>
<div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label"> {{ form_label( form.plainPassword.first) }}</label>
    <div class="col-sm-10">
        {{ form_widget( form.plainPassword['first'], { 'attr': {'class': 'form-control'} }) }}
        <span style="color: red"> {{ form_errors( form.plainPassword.first) }}</span>

    </div>
</div>
<div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label"> {{ form_label( form.plainPassword.second) }}</label>
    <div class="col-sm-10">
        {{ form_widget( form.plainPassword['second'], { 'attr': {'class': 'form-control'} }) }}
        <span style="color: red"> {{ form_errors(form.plainPassword.second) }}</span>

    </div>
</div>
<div class="form-group row">
    <div class="col-sm-10">
        <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}"/>
    </div>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
<div class="form-group row">
    <div class="col-sm-10">
        {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    </div>
</div>
