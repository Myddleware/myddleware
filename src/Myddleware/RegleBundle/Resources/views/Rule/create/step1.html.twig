{% extends '::base.html.twig' %}
{% block title %}{{parent()}} | {{'create_rule.step1.title'|trans}}{% endblock %}
{% block titlesm %}{{'title.rule.create'|trans}}{% endblock titlesm %} 
{% block body %}
    <div>
    	{# ------------- PROGRESSION DE LA REGLE ------------- #}
    	<div id="progress_content">
			<div id="progressbar" class="ui-progressbar ui-widget ui-widget-content ui-corner-all" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="5">
				<div class="ui-progressbar-value ui-widget-header ui-corner-left" style="width:5%;">5 %</div>
			</div>	
		</div>
		{# ------------- ONGLETS ------------- #}
		<div id="tabs">	
		<ul>
			{% include "RegleBundle:Rule:create/onglets/index.html.twig" %}
		</ul>
			<div id="connexion">
				{% include "RegleBundle:Rule:create/onglets/connexion.html.twig" %} {# with{'solutions':solutions} only #}
			</div>
			<div id="choix"></div>
			<div id="champs"></div>
			<div id="filter"></div>
			<div id="params"></div>
		</div>
    </div>

    {# ------------- PARAMETRES JQUERY ------------- #}
    <script type="text/javascript">
    	
	var path_img = "{{ asset('bundles/regle/images/') }}";
	var onglets = {
		active: 0,
		disabled: [1,2,3,4,5,6]
	};
 	var change = false;
 	var lang = "{{app.request.locale}}";
 	var inputs = "{{ path('regle_inputs') }}";
 	var inputs_rule_name = "{{ path('regle_inputs_name_unique') }}";
    </script>
    {# ------------- PARAMETRES JQUERY ------------- #}
{% endblock %}