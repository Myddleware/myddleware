<div class="link-help-view">
	<a href="#help-content-param"><span class="glyphicon glyphicon-info-sign"></span> {{'rule.help'|trans}}</a>
</div>

<div id="ruleparams">
{% if params %}
	{% for c, p in params %}
		{% if p.type != 'option' %}
			<p>{{p.label|trans}} : <input data-id="{{ p.id_bdd }}" {{ p.required ? 'class="require params"' : 'class="params"' }} type="{{ p.type }}" id="{{ p.name }}" name="{{ p.name }}" value="{{ p.value_bdd }}" /></p>
		{% else %}
			<p>
				{{p.label|trans}} : <select data-id="{{ p.id_bdd }}" {{ p.required ? 'class="require params"' : 'class="params"' }} name="{{ p.name }}" id="{{ p.name }}">
					{% for opt_value, opt_name in p.option %}
						{% if opt_value == p.value_bdd %}
							<option selected="selected" value="{{ opt_value }}">{{ opt_name|trans }}</option>
						{% else %}
							<option value="{{ opt_value }}">{{ opt_name|trans }}</option>
						{% endif %}
					{% endfor %}
				</select>
			</p>
		{% endif %}
	{% endfor %}
{% endif %}
</div>

<div id="validRuleParams" class="left">
	<button id="saveRuleParams" type="button" class="btn-mydinv">
	  <span class="glyphicon glyphicon-edit"></span> {{'view_rule.params.save'|trans}}
	</button>
	<div class="myd_loading"><img id="myd_loading_img" src="" /></div>
</div>

<div id="simuleRuleFlux" class="right">
	<div id="simuleRuleFluxBtn">
		<div class="simuleRuleFluxLoading"><img id="simuleRuleFluxLoading_img" src="" /></div>
		<button id="simuleRuleFluxAction" type="button" class="btn-mydinv">
		  <span class="glyphicon glyphicon-play-circle"></span> {{'view_rule.params.simule'|trans}}
		</button>
	</div>
	<div id="simuleRuleFluxContainer">
		<p class="simuleRuleFluxResult">{{'view_rule.params.result'|trans}}*: </p><p class="simuleRuleFluxResult" id="simuleRuleFluxResult">-</p>
		<div id="simuleRuleFluxError" class="alert alert-danger" role="alert"></div>
		<p id="simuleRuleFluxDetails">*{{'view_rule.params.details'|trans}}</p>
	</div>
</div>

<div class="clr"></div>
