<div class="link-help-view">
	<a href="#help-content-mapping"><span class="glyphicon glyphicon-info-sign"></span> {{'rule.help'|trans}}</a>
</div>

<div id="fd-title" class="left">
	<p>{{'view_rule.mapping.module_target'|trans}} : {{ rule.getModuleTarget }}<p>
	<p>{{'view_rule.mapping.module_source'|trans}} : {{ rule.getModuleSource }}<p>
</div>
<div class="clr"></div>

{% if fields %}
	{% for c, f in fields %}
		<div class="mapping gray">
			<div data-title="gray" class="title"> 
				{#<span class="glyphicon glyphicon-star">{{ f.getTarget }}</span>#}
				{{ f.getTarget }}
			</div>
			<div class="fields">	
				<div>
					<p class="field">{{ f.getSource }} </p>

					{% if f.getFormula %}
						<p class="formula">{{'view_rule.mapping.formula'|trans}} : {{ f.getFormula }} </p>
					{% else %}
						<p class="formula">{{'view_rule.mapping.formula_empty'|trans}}</p>
					{% endif %}
				</div>
			</div> 
		</div> 
	{% endfor %}
		<div class="clr"></div>

{% else %}
	<div>{{'view_rule.mapping.empty'|trans}}</div>
{% endif %}

<div id="help-content-mapping" class="help-content">
	<h2>{{'help.title'|trans}} <span class="glyphicon glyphicon-info-sign"></h2>
	<p>{{'help.viewrule.mapping'|trans|raw}}</p>
</div>
