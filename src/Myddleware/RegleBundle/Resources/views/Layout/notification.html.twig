{% if app.session %}

<ul id="zone_notification">

{% if app.session.get('error') is not empty  %}
    {% for error in app.session.get('error') %}
        <li class="error"><span class="glyphicon glyphicon-remove"></span><p>{{ error|raw }}</p></li>
    {% endfor %}
{% endif %}


{% if app.session.get('warning') is not empty  %}
    {% for warning in app.session.get('warning') %}
        <li class="warning"><span class="glyphicon glyphicon-exclamation-sign"></span><p>{{ warning|raw }}</p></li>
    {% endfor %}
{% endif %}

{% if app.session.get('info') is not empty  %}
    {% for info in app.session.get('info') %}
        <li class="info"><span class="glyphicon glyphicon-info-sign"></span><p>{{ info|raw }}</p></li>
    {% endfor %}
{% endif %}

{% if app.session.get('success') is not empty  %}
    {% for success in app.session.get('success') %}
        <li class="success"><span class="glyphicon glyphicon-ok"></span><p>{{ success|raw }}</p></li>
    {% endfor %}
{% endif %}

{{app.session.remove('error') }}
{{app.session.remove('warning') }}
{{app.session.remove('info') }}
{{app.session.remove('success') }}
{#
{{ app.session.clear() }}
WARNING, it's not a good practice, because it's clear all session *_*. We sould use flashbag for notification
#}

</ul>
{% endif %}