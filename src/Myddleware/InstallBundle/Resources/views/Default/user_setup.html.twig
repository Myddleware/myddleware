{% extends '::baseone.html.twig' %}
{% block title %} {{ 'install.title' | trans }} {% endblock %}
{% block css %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/install/install.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/regle/css/layout.css') }}" type="text/css" />
{% endblock css %}
{% block body %}
<div id="myd_top"></div>
<div id="logo"></div>
<div class="container">
    <section>
        <div id="myd_title">
            <p>{{ 'install.title' | trans }}</p>
        </div>
        <article class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">{{ 'install.user_setup' | trans }}</h1> 
            </div>
            <div class="panel-body">
                <p>{{ 'install.role_admin' | trans }}</p>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        {% if type == 'error' %}
                            <div class="flash-notice alert-danger">
                                {{ message }}
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div> 
             <div class="buttons">
                <a href="{{ path('myddleware_install_default_setupdatabase') }}">
                    <button class="btn btn-default btn-lg">{{ 'install.previous' | trans }}</button>
                </a>
            </div>
    </section>
</div>
   <footer>
        <p>Â© Myddleware 2014 - {{ 'now' | date('Y') }}</p>
        <p>version {{ myd_version }}</p>
    </footer>
    {% block javascripts %} 
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>  
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/install.js') }}"></script>
    {% endblock %}
{% endblock %}
