{% extends '::baseone.html.twig' %}
{% block title %} {{ 'install.title' | trans }} {% endblock %}
{% block css %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="{{ asset('css/install/install.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/regle/css/layout.css') }}" type="text/css" />
{% endblock css %}
{% block body %}
<div id="myd_top"></div>
<div id="logo"></div>
<div class="container">
    <section>
        <div id="myd_title">
            <p>{{ 'install.title' | trans }}</p>
        </div>
        <article class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">{{ 'install.database_setup' | trans }}</h1>
            </div>
            <div class="panel-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
            {% if connection_failed_message %}
                <p class="alert-danger">{{ connection_failed_message }}</p>
            {% else %}
               <p class="alert-success">{{ connection_success_message }}</p>
               {% if connection_success_message %}
                    <p>{{'install.next_step' | trans }}</p>
               {% endif %}
            {% endif %}
            </div> 
             <div class="buttons">
                    <button class="btn btn-default btn-lg" id="previous-btn">
                        <a href="{{ path('myddleware_install_default_index') }}" id="previous">
                             {{ 'install.previous' | trans }}
                        </a>
                    </button>
                    {% if connection_failed_message %}
                        <button class="btn btn-default btn-lg" id="next-btn" disabled>
                        <a href="{{ path('myddleware_install_default_setupuser') }}" id="next">
                            {{ 'install.next' | trans }}
                        </a>
                    </button>
                    {% elseif connection_success_message %}
                      <button class="btn btn-default btn-lg" id="next-btn">
                        <a href="{{ path('myddleware_install_default_setupuser') }}" id="next">
                            {{ 'install.next' | trans }}
                        </a>
                    </button>
                    {% endif %}
            </div>
        </article>
           
    </section>
</div>
    <footer>
        <p>Â© Myddleware 2014 - {{ 'now' | date('Y') }}</p>
        <p>version {{ myd_version }}</p>
    </footer>
    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>  
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset('js/install.js') }}"></script>
    {% endblock %}
{% endblock %}
